# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================

# Environment
NODE_ENV=production

# Database
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-password-here
MONGODB_URI=mongodb://admin:your-secure-password-here@mongodb:27017/ux-flow-engine?authSource=admin

# Redis
REDIS_URL=redis://redis:6379

# Security
JWT_SECRET=your-very-secure-jwt-secret-minimum-32-characters
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-32-character-encryption-key-here

# API Keys
GOOGLE_API_KEY=your-google-api-key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Product IDs
STRIPE_STARTER_PRODUCT_ID=prod_starter_id
STRIPE_STARTER_PRICE_ID=price_starter_id
STRIPE_PRO_PRODUCT_ID=prod_pro_id
STRIPE_PRO_PRICE_ID=price_pro_id
STRIPE_ENTERPRISE_PRODUCT_ID=prod_enterprise_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_id

# Credit Packages
STRIPE_CREDITS_SMALL_PRICE_ID=price_credits_small
STRIPE_CREDITS_MEDIUM_PRICE_ID=price_credits_medium
STRIPE_CREDITS_LARGE_PRICE_ID=price_credits_large

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# CORS
CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Service Ports
API_GATEWAY_PORT=3000
COGNITIVE_CORE_PORT=3001
KNOWLEDGE_SERVICE_PORT=3002
FLOW_SERVICE_PORT=3003
USER_MANAGEMENT_PORT=3004
BILLING_SERVICE_PORT=3005

# Service URLs (internal Docker network)
COGNITIVE_CORE_URL=http://cognitive-core:3001
FLOW_SERVICE_URL=http://flow-service:3003
KNOWLEDGE_SERVICE_URL=http://knowledge-service:3002
USER_MANAGEMENT_URL=http://user-management:3004
BILLING_SERVICE_URL=http://billing-service:3005

# ChromaDB
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# Monitoring (optional)
MONITORING_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Feature Flags
ENABLE_SOCIAL_AUTH=false
ENABLE_2FA=true
ENABLE_API_DOCS=false
ENABLE_DEBUG_MODE=false