{
  "name": "@ux-flow/user-management-service",
  "version": "1.0.0",
  "description": "User and workspace management service for UX-Flow-Engine",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=integration",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=unit",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "echo 'No build step required'",
    "clean": "echo 'No clean step required'"
  },
  "dependencies": {
    "@ux-flow/common": "^1.0.0",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.2.0",
    "bcrypt": "^5.1.1",
    "joi": "^17.12.3",
    "uuid": "^9.0.1",
    "nodemailer": "^6.9.8",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "mongodb-memory-server": "^9.1.6",
    "@jest/globals": "^29.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}