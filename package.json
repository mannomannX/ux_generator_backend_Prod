{
  "name": "ux-flow-engine",
  "version": "4.0.0",
  "description": "AI-powered UX Flow Design System with Visual Editor and Figma Integration",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@ux-flow/web",
    "dev:services": "turbo run dev --filter='./services/*'",
    "dev:all": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@ux-flow/web",
    "build:services": "turbo run build --filter='./services/*'",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" turbo run test",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" turbo run test:coverage",
    "test:integration": "NODE_OPTIONS=\"--experimental-vm-modules\" turbo run test:integration",
    "test:api-gateway": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --selectProjects api-gateway",
    "test:cognitive-core": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --selectProjects cognitive-core",
    "test:knowledge-service": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --selectProjects knowledge-service",
    "test:flow-service": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --selectProjects flow-service",
    "test:billing-service": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --selectProjects billing-service",
    "test:user-management": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --selectProjects user-management",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "health:check": "node scripts/health-check.mjs",
    "logs:tail": "node scripts/log-aggregator.js",
    "migrate:data": "node scripts/migrate-data.js",
    "generate:service": "node tools/generators/new-service.js",
    "generate:agent": "node tools/generators/new-agent.js",
    "docs:api": "node tools/generators/api-docs.js",
    "deploy:web": "turbo run build --filter=@ux-flow/web && vercel --prod",
    "deploy:services": "railway up",
    "install:all": "npm install"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "turbo": "latest",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/ux-flow-engine.git"
  },
  "keywords": [
    "ux-design",
    "ai-agents",
    "flow-diagrams",
    "microservices",
    "user-experience"
  ],
  "author": "Your Organization",
  "license": "MIT"
}