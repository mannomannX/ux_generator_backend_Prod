# ==========================================
# UX-Flow-Engine Environment Configuration
# ==========================================

# Node Environment
NODE_ENV=development
API_VERSION=v1
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# Service Ports
# ==========================================
API_GATEWAY_PORT=3000
COGNITIVE_CORE_PORT=3001
KNOWLEDGE_SERVICE_PORT=3002
FLOW_SERVICE_PORT=3003
USER_MANAGEMENT_PORT=3004

# Service URLs (for inter-service communication)
API_GATEWAY_URL=http://localhost:3000
COGNITIVE_CORE_URL=http://localhost:3001
KNOWLEDGE_SERVICE_URL=http://localhost:3002
FLOW_SERVICE_URL=http://localhost:3003
USER_MANAGEMENT_URL=http://localhost:3004

# ==========================================
# Database Configuration
# ==========================================

# MongoDB
MONGODB_URI=mongodb://localhost:27017/ux-flow-engine
MONGODB_DB_NAME=ux-flow-engine
MONGODB_MAX_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ChromaDB (Vector Database)
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_SSL=false
CHROMADB_API_KEY=

# ==========================================
# AI Provider Configuration (REQUIRED)
# ==========================================

# Google Gemini (Primary) - REQUIRED
GOOGLE_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_STANDARD=gemini-1.5-flash-latest
GEMINI_MODEL_PRO=gemini-1.5-pro-latest

# OpenAI (Optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Anthropic Claude (Optional)
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-3-opus-20240229

# ==========================================
# Security Configuration
# ==========================================

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys (32 characters minimum)
ENCRYPTION_MASTER_KEY=change-this-to-a-32-character-key
BACKUP_ENCRYPTION_KEY=change-this-to-another-32-char-key
ANONYMIZATION_SALT=change-this-salt-value

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
PASSWORD_MIN_LENGTH=8

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_AUTHENTICATED=200

# ==========================================
# Backup & Compliance
# ==========================================

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# GDPR Compliance
ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555
DELETION_GRACE_PERIOD_DAYS=30

# ==========================================
# Monitoring
# ==========================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL_MS=30000

# ==========================================
# Development Settings
# ==========================================
HOT_RELOAD=true
ENABLE_DEBUG_ROUTES=true
DEBUG=false

# ==========================================
# Email Configuration (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@ux-flow-engine.com